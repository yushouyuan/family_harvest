<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.familyharvest.cordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>FamilyHarvestCordova</name>
  <description>示例 Cordova 封装（将网站作为远程 URL 加载或内置 www）</description>
  <author>Dev</author>

  <content src="index.html" />
  <access origin="*" />

  <platform name="android">
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest">
      <uses-permission android:name="android.permission.RECORD_AUDIO" />
    </edit-config>
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
      <application android:networkSecurityConfig="@xml/network_security_config" android:usesCleartextTraffic="true" />
    </edit-config>
  </platform>

  <plugin name="cordova-plugin-whitelist" source="npm" />
  <plugin name="cordova-plugin-android-permissions" source="npm" />
</widget>
